{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dictara",
  "identifier": "app.dictara.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "recording-popup",
        "title": "Recording",
        "width": 100,
        "height": 30,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "visible": false,
        "focusable": false,
        "url": "recording-popup",
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "resources": ["resources/**/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "infoPlist": "Info.plist",
      "entitlements": "Entitlements.plist",
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/vitalii-zinchenko/dictara/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhFREJEMDgwOTMwNjdGNEYKUldSUGZ3YVRnTkRianZrL1UyaWJyanR5MzJValJFUklZT0NLQUpjYmFKemtMRkQzRE01Nmd6Ky8K"
    }
  }
}
